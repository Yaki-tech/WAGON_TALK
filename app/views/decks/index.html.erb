<nav class="nav-bar">
  <%= link_to root_path, class: "nav-bar__logo" do %>
    <span>WAGON</span><span>TALK</span>
  <% end %>
  <%= link_to favorites_path, class: "nav-bar__favorites", title: "Mes favoris" do %>
    &#9829;
  <% end %>
</nav>

<% hero_deck = @decks.first %>
<% if hero_deck %>
  <div class="hero-card">
    <div class="hero-card__title">
      <span>WAGON</span><span>TALK</span>
    </div>
    <p class="hero-card__description"><%= hero_deck.description %></p>
    <%= button_to "Start the conversation", deck_session_path(hero_deck), method: :post, class: "hero-card__cta" %>
  </div>
<% end %>

<% other_decks = @decks.drop(1) %>
<% if other_decks.any? %>
  <h2 class="section-title">Other decks</h2>

  <div class="deck-grid">
    <% other_decks.each do |deck| %>
      <%= button_to deck_session_path(deck), method: :post, class: "deck-card deck-card--#{deck.title.parameterize}" do %>
        <div class="deck-card__bubble"><%= deck.title.upcase %></div>
      <% end %>
    <% end %>
  </div>
<% end %>
